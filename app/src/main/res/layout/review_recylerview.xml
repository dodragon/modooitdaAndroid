<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_profile_default"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#3c3c3c"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="4sp"
                    android:text="울며교자먹기" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/starLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                    <TextView
                        android:id="@+id/insertDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:textSize="10sp"
                        android:textColor="#5c7cfa"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="6sp"
                        android:gravity="center_horizontal"
                        android:text="20.08.26" />

                </LinearLayout>
                <TextView
                    android:id="@+id/payMenus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:textColor="#b7b7b7"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="-2sp"
                    android:text="프리미엄피자R + 치즈오븐스파게티 + 콜라 1.25L + 버팔로윙" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="15.5dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:textColor="#3c3c3c"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="7sp"
            android:text="세트라서 양이 적을 줄 알았는데 생각보다 많아서
좋았어요! 매장도 깔끔했습니다.
#맛있음 #푸짐함 #깔끔함" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="15.5dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:nestedScrollingEnabled="true"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="30dp"
            android:background="#b7b7b7"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>