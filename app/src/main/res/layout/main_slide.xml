<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="325dp"
            android:background="#FFFFFF"
            android:outlineProvider="paddedBounds"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="240dp">

                        <ImageView
                            android:id="@+id/mainImg"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:background="@drawable/all_round_background_8dp"
                            android:src="@drawable/pagesample"
                            android:scaleType="centerCrop"/>

                        <LinearLayout
                            android:id="@+id/cpClose"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:background="#97000000">

                            <TextView
                                android:id="@+id/closeTv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="오늘은 쉽니다."
                                android:textSize="18dp"
                                android:letterSpacing="-0.07"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mainCoupon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.07"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/star_p"/>

                        <TextView
                            android:id="@+id/revGrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="12dp"
                            android:textColor="#515151"
                            android:letterSpacing="-0.07"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/couponEa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:letterSpacing="-0.07"
                            android:textColor="#6f6e6e"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cpName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:letterSpacing="-0.07"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textColor="@color/main_color"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:letterSpacing="-0.05"
                            android:text="10%"
                            android:textColor="#FF0000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/disPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:textStyle="bold"
                            android:text="19,000원"
                            android:textColor="#333333"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:letterSpacing="-0.05"
                            android:text="42,000원"
                            android:textColor="#9b9b9b"
                            android:textSize="11dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.07"
                            android:textColor="#6f6e6e"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ribbon_ic"
                    android:layout_width="67dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ribbon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ribbon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.07"
                    android:text="포장"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ribbon2_ic"
                    android:layout_width="67dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ribbon2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ribbon2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.07"
                    android:text="방문"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="@drawable/bottom_shadow" />
</LinearLayout>