<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaobabPush">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:text="푸시 보내기"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="16dp"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="9dp"
                            android:orientation="horizontal"
                            android:background="@drawable/coupon_total_background"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_menu_coupon"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="#9b9b9b"
                                    android:letterSpacing="-0.03"
                                    android:text="이용권"/>

                                <TextView
                                    android:id="@+id/voucher"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:textColor="#333333"
                                    android:letterSpacing="-0.03"
                                    android:text="193개"/>

                            </LinearLayout>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <Button
                                android:id="@+id/pushPay"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingVertical="4dp"
                                android:paddingHorizontal="15dp"
                                android:background="@drawable/search_item_background"
                                android:textSize="12dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="이용권 구매하러 가기"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="33dp"
                            android:layout_marginHorizontal="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_group"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="반경 " />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/pushSpinner"
                                    android:layout_width="24dp"
                                    android:layout_height="20dp"
                                    android:background="@null" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="end"
                                    android:background="#59515151"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="km에 "/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="19dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="일반회원"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/normalText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="5dp"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textColor="#59515151" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="end"
                                    android:background="#59515151"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="명,"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="팬"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/fanText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:paddingHorizontal="5dp"
                                    android:textAlignment="textEnd"
                                    android:text="0"
                                    android:textColor="#59515151" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="end"
                                    android:background="#59515151"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="명 중"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginHorizontal="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_send"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="총 " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="19dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="일반회원"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/normalSendText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:textColor="#59515151"
                                    android:textCursorDrawable="@drawable/cursor"
                                    android:inputType="number"
                                    android:theme="@style/editNoneTheme" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_gravity="end"
                                    android:background="#59515151"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="명,"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="팬"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/fanSendText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textEnd"
                                    android:textCursorDrawable="@drawable/cursor"
                                    android:theme="@style/editNoneTheme"
                                    android:hint="0"
                                    android:inputType="number"
                                    android:textColor="#59515151" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_gravity="end"
                                    android:background="#59515151"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:textSize="14dp"
                                android:textColor="#333333"
                                android:letterSpacing="-0.07"
                                android:text="명에게 보내기"/>

                        </LinearLayout>

                        <ToggleButton
                            android:id="@+id/pushToggle"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/review_input_background"
                            android:textColor="#ffffff"
                            android:textOff="반경 내 고객 리스트 확인하기"
                            android:textOn="접기"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/customerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="아래 고객님중 선택하신 개수만큼 무작위로 발송됩니다."
                                android:textAlignment="center"
                                android:textColor="#000000" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="15dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="일반"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="팬"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/normalMother"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/fanMother"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="22dp"
                            android:background="#59515151" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="26dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:textColor="#9b9b9b"
                                        android:letterSpacing="-0.08"
                                        android:lineSpacingExtra="8sp"
                                        android:text="타이틀 선택"/>

                                    <Spinner
                                        android:id="@+id/titleSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@null" />
                                    
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="15dp"
                                        android:background="#f5f5f5"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:textSize="12dp"
                                        android:textColor="#9b9b9b"
                                        android:letterSpacing="-0.08"
                                        android:lineSpacingExtra="8sp"
                                        android:text="제목"/>

                                    <EditText
                                        android:id="@+id/realTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:hint="제목(20자 미만)"
                                        android:gravity="top"
                                        android:maxLength="20"
                                        android:textSize="18dp"
                                        android:textColor="#59515151"
                                        android:textCursorDrawable="@drawable/cursor"
                                        android:theme="@style/editNoneTheme"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="#f5f5f5"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="19dp"
                                        android:textSize="12dp"
                                        android:textColor="#9b9b9b"
                                        android:letterSpacing="-0.08"
                                        android:lineSpacingExtra="8sp"
                                        android:text="보낼 내용을 적어주세요."/>

                                    <EditText
                                        android:id="@+id/pushContent"
                                        android:layout_width="match_parent"
                                        android:layout_height="146dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginBottom="30dp"
                                        android:paddingHorizontal="16dp"
                                        android:paddingVertical="12dp"
                                        android:background="@drawable/stat_spinner_background"
                                        android:gravity="top"
                                        android:hint="(180자 미만)"
                                        android:maxLength="180"
                                        android:textSize="18dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@color/main_color"
                    android:text="보내기"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:letterSpacing="-0.07"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>